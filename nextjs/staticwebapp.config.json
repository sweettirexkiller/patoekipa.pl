{
  "platform": {
    "apiRuntime": "node:18"
  },
  "routes": [
    {
      "route": "/admin*",
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/api/data*",
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/api/team*",
      "allowedRoles": ["authenticated"],
      "methods": ["POST", "PUT", "DELETE"]
    },
    {
      "route": "/api/projects*",
      "allowedRoles": ["authenticated"],
      "methods": ["POST", "PUT", "DELETE"]
    },
    {
      "route": "/api/testimonials*",
      "allowedRoles": ["authenticated"],
      "methods": ["POST", "PUT", "DELETE"]
    },
    {
      "route": "/api/contact*",
      "allowedRoles": ["authenticated"],
      "methods": ["POST", "PUT", "DELETE"]
    },
    {
      "route": "/api/*",
      "allowedRoles": ["anonymous"],
      "methods": ["GET"]
    }
  ],
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": ["/api/*", "/_next/*", "/favicon.ico", "*.{css,js,png,jpg,jpeg,gif,svg,woff,woff2}"]
  },
  "responseOverrides": {
    "401": {
      "redirect": "/.auth/login/github?post_login_redirect_uri=/admin"
    }
  }
} 