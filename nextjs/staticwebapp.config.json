{
  "platform": {
    "apiRuntime": "node:18"
  },
  "trailingSlash": "auto",
  "routes": [
    {
      "route": "/api/*",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/_next/static/*",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    }
  ],
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": [
      "/api/*",
      "/images/*.{png,jpg,gif,ico,svg}",
      "/_next/static/*",
      "/_next/image*",
      "/favicon.ico",
      "/robots.txt",
      "/sitemap.xml",
      "/.swa/*"
    ]
  },
  "mimeTypes": {
    ".json": "application/json",
    ".css": "text/css",
    ".js": "application/javascript",
    ".mjs": "application/javascript"
  },
  "globalHeaders": {
    "X-Content-Type-Options": "nosniff",
    "X-Frame-Options": "DENY",
    "X-XSS-Protection": "1; mode=block"
  },
  "responseOverrides": {
    "404": {
      "rewrite": "/404.html"
    }
  }
} 